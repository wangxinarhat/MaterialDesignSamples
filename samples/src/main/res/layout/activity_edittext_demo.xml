<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">



    <EditText
        android:id="@+id/edittext0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_basic4"
        android:ellipsize="end"
        android:hint="限制小数输入位数"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_basic2"
            android:layout_weight="1"
            android:text="input result" />

        <TextView

            android:id="@+id/display_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body"
            tools:text="sdlfjhsdhf" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_basic4"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edittext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="弹出数字键盘，但可输入数字和字母"
            android:singleLine="true" />

    </LinearLayout>


    <wang.wangxinarhat.materialdesignsamples.ui.widget.MyNumberPicker
        android:orientation="horizontal"
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_basic4" />


</LinearLayout>