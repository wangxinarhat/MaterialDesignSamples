<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_basic3"
    android:background="@drawable/rectangle_hollow_grey"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView

        android:id="@+id/layout_number_picker_view_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_basic2"
        android:layout_weight="1"
        android:background="@drawable/button_select_bg"
        android:textColor="@color/select_text_color"
        android:gravity="center"

        android:text="-"
        android:textSize="60dp" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/background" />

    <TextView

        android:id="@+id/layout_number_picker_view_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_basic1"
        android:layout_weight="1"
        android:gravity="center"

        android:text="2"
        android:textSize="@dimen/dimen_basic6" />

    <View

        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/background" />

    <TextView
        android:id="@+id/layout_number_picker_view_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_basic1"
        android:layout_weight="1"
        android:background="@drawable/button_select_bg"
        android:textColor="@color/select_text_color"
        android:gravity="center"
        android:text="+"
        android:textSize="60dp" />


</LinearLayout>