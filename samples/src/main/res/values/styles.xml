<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_black_secondary</item>
    </style>



    <style name="BottomBarButtonStyle">

        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:textColor">@color/grey_white_1000</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:layout_margin">@dimen/dimen_basic1</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="FragmentBaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_black_secondary</item>
    </style>



    <!--培训详情页面TextView样式-->
    <style name="DetailCourseTextStyle">
        <item name="android:padding">@dimen/dimen_basic1</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_black_hint</item>
    </style>





    <!--比赛详情LeftTextView样式-->
    <style name="GameDetailLeftTextFormatStyle">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">@dimen/dimen_basic2</item>
        <item name="android:padding">@dimen/dimen_basic1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_black_hint</item>
    </style>


    <!--比赛详情RightTextView样式-->
    <style name="GameDetailRightTextFormatStyle">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">@dimen/dimen_basic2</item>
        <item name="android:padding">@dimen/dimen_basic1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_black_hint</item>
    </style>


    <!-- 培训时间页面样式-->
    <style name="CourseTimeTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_black_secondary</item>
    </style>


    <!--文字样式-->
    <style name="TextStyleNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--一般列表item标题文字样式-->
    <style name="TextStyleNormal.ListItemTitle">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/text_black_secondary</item>
    </style>

    <!--一般列表小文字样式-->
    <style name="TextStyleNormal.ListItemBody">
        <item name="android:lineSpacingExtra">@dimen/dimen_basic1</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_black_thirdly</item>
    </style>
    <!--LoadingPage中ViewStub样式-->
    <style name="LoadingPageViewStubStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <!--ToolBar居中标题样式-->
    <style name="ToolBarTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>



    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">@color/color_primary</item>
        <!-- Change voice icon-->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>
        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>
        <!-- Change up icon-->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>
        <!-- Change icon for the suggestions-->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>
        <!-- Change background for the suggestions list view-->
        <item name="searchSuggestionBackground">@android:color/white</item>
        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">@color/grey_white_1000</item>
        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">@color/text_white_hint</item>
        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>
    </style>



</resources>
